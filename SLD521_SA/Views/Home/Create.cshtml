@model SLD521_SA.Models.Paper

@{
    ViewBag.Title = "Create";
}

<h2>Submit New Paper</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Paper</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" >
        @Html.LabelFor(model => model.Abstract, htmlAttributes: new { @class = "control-label col-md-2 " })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Abstract, new { htmlAttributes = new { @class = "form-control long-textbox" } })
            @Html.ValidationMessageFor(model => model.Abstract, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Topic, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Topic", new List<SelectListItem>
       {
           new SelectListItem{Text="Data Science", Value = "Data Science"},
           new SelectListItem{Text="Education", Value = "Education"},
           new SelectListItem{Text="Human-Computer Interaction", Value = "Human-Computer Interaction"},
           new SelectListItem{Text="Internet of Things", Value = "Internet of Things"},
       }
           )
            @Html.ValidationMessageFor(model => model.Topic, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-default" />
            <button>@Html.ActionLink("Back to List", "Papers")</button>
        </div>
    </div>
</div>
        }


        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
